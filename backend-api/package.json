{
  "name": "backend-api",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "author": "mikana0918",
  "license": "ISC",
  "description": "backend API",
  "scripts": {
    "predev": "npm run generate && npm run migrate:deploy",
    "dev": "run-p dev:*",
    "dev:build": "node ./scripts/build.dev.mjs",
    "dev:server": "node-dev --respawn index.js",
    "dev:frourio": "frourio --watch",
    "dev:prisma": "prisma generate --watch",
    "prebuild": "npm run generate && npm run migrate:deploy",
    "build": "node ./scripts/build.prod.mjs",
    "generate": "run-p generate:*",
    "generate:aspida": "aspida",
    "generate:frourio": "frourio",
    "generate:prisma": "prisma generate",
    "migrate:dev": "prisma migrate dev && npx prisma db seed",
    "migrate:dev:createonly": "prisma migrate dev --create-only",
    "migrate:deploy": "prisma migrate deploy && npx prisma db seed",
    "migrate:reset": "prisma migrate reset",
    "prestart": "npm run generate && npm run migrate:deploy",
    "start": "run-p start:*",
    "start:run": "node --enable-source-maps index.js",
    "seed:dev": "tsx prisma/seed.dev.ts",
    "seed:production": "tsx prisma/seed.production.ts",
    "test": "vitest run --pool=forks",
    "typecheck": "tsc --noEmit",
    "lint": "npx eslint ."
  },
  "prisma": {
    "seed": "tsx prisma/seed.production.ts"
  },
  "dependencies": {
    "@aspida/axios": "^1.14.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.0.2",
    "@fastify/multipart": "^9.0.1",
    "@prisma/client": "^6.1.0",
    "@sendgrid/mail": "^8.1.4",
    "aspida": "^1.14.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "commander": "^13.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@quramy/prisma-fabbrica": "^2.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "commonTypesWithClient": "file:./commonTypesWithClient",
    "esbuild": "^0.25.0",
    "esbuild-node-externals": "^1.16.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "frourio": "^1.2.1",
    "frourio-framework-prisma-generators": "^2.1.4",
    "node-dev": "^8.0.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
