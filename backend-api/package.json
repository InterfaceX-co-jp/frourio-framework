{
  "name": "backend-api",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "mikana0918",
  "license": "ISC",
  "description": "NFTFUN backend API",
  "scripts": {
    "predev": "npm run generate && npm run migrate:deploy",
    "dev": "run-p dev:*",
    "dev:build": "node ./scripts/build.dev.js",
    "dev:server": "node-dev --respawn index.js",
    "dev:frourio": "frourio --watch",
    "dev:prisma": "prisma generate --watch",
    "prebuild": "npm run generate && npm run migrate:deploy",
    "build": "node ./scripts/build.prod.js",
    "generate": "run-p generate:*",
    "generate:aspida": "aspida",
    "generate:frourio": "frourio",
    "generate:prisma": "prisma generate",
    "migrate:dev": "prisma migrate dev && npx prisma db seed",
    "migrate:dev:createonly": "prisma migrate dev --create-only",
    "migrate:deploy": "prisma migrate deploy && npx prisma db seed",
    "migrate:reset": "prisma migrate reset",
    "prestart": "npm run generate && npm run migrate:deploy",
    "start": "run-p start:*",
    "start:run": "node --enable-source-maps index.js",
    "seed:dev": "tsx prisma/seed.dev.ts",
    "seed:production": "tsx prisma/seed.production.ts",
    "test": "vitest run --pool=forks",
    "typecheck": "tsc --noEmit"
  },
  "prisma": {
    "seed": "tsx prisma/seed.production.ts"
  },
  "dependencies": {
    "@aspida/axios": "^1.14.0",
    "@fastify/cookie": "^9.1.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@prisma/client": "^5.4.2",
    "@prisma/generator-helper": "^5.20.0",
    "@sendgrid/mail": "^8.1.3",
    "aspida": "^1.14.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "commander": "^12.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@quramy/prisma-fabbrica": "^2.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.8.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commonTypesWithClient": "file:./commonTypesWithClient",
    "esbuild": "^0.24.0",
    "esbuild-node-externals": "^1.9.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "frourio": "^1.0.0",
    "node-dev": "^8.0.0",
    "npm-run-all2": "^5.0.0",
    "prettier": "^3.0.0",
    "prisma": "^5.5.1",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.0.1"
  }
}
