# Application
NODE_ENV=development
APP_NAME=Frourio Framework
APP_DEBUG=true
APP_URL=http://localhost:31577
APP_LOCALE=ja
APP_FALLBACK_LOCALE=ja
TZ=Asia/Tokyo

# Database
DATABASE_URL=postgresql://root:root@localhost:5432/frourio_framework
TEST_DATABASE_URL=postgresql://root:root@localhost:5432/frourio_framework_test
DB_CONNECTION=postgresql
DB_SCHEMA=public
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_MIGRATIONS_TABLE=migrations

# API Server
API_SERVER_PORT=31577
API_BASE_PATH=/api

# JWT Authentication
API_JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=86400
JWT_REFRESH_EXPIRES_IN=604800
JWT_ISSUER=frourio-framework
JWT_AUDIENCE=frourio-framework-api

# Admin
ADMIN_EMAIL=admin@frourio-framework.com
ADMIN_PASSWORD=Qwerty1!
ADMIN_SESSION_TIMEOUT=3600
ADMIN_TOKEN_EXPIRATION=86400

# CORS
WEB_FRONTEND_URL=http://localhost:3000
CORS_ADDITIONAL_ORIGINS=

# Swagger/OpenAPI
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs
SWAGGER_TITLE=Frourio Framework API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=API Documentation for Frourio Framework

# Sentry Monitoring
SENTRY_ENABLED=false
SENTRY_DSN=

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000
REDIS_KEY_PREFIX=
REDIS_DEFAULT_TTL=