{
  "name": "frourio-framework",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix-colors \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --prefix frontend-web",
    "dev:server": "npm run dev --prefix backend-api",
    "generate": "concurrently --kill-others-on-fail --prefix-colors \"npm run generate:client\" \"npm run generate:server\"",
    "generate:client": "npm run generate --prefix frontend-web",
    "generate:server": "npm run generate --prefix backend-api",
    "test": "concurrently --kill-others-on-fail --prefix-colors \"npm run test:client\" \"npm run test:server\"",
    "test:client": "npm run test --prefix frontend-web",
    "test:server": "npm run test --prefix backend-api",
    "typecheck": "concurrently --kill-others-on-fail --prefix-colors \"npm run typecheck:client\" \"npm run typecheck:server\"",
    "typecheck:client": "npm run typecheck --prefix frontend-web",
    "typecheck:server": "npm run typecheck --prefix backend-api",
    "lint": "concurrently --kill-others-on-fail --prefix-colors \"npm run lint:client\" \"npm run lint:server\"",
    "lint:client": "npm run lint --prefix frontend-web",
    "lint:server": "npm run lint --prefix backend-api"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "aspida": "^1.14.0",
    "eslint": "^9.15.0",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "concurrently": "^9.1.0",
    "pathpida": "^0.25.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "react": "^18.3.1",
    "stylelint": "^16.10.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard": "^36.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "frourio-framework-prisma-generators": "^2.2.0"
  }
}
