{
  "name": "frourio-framework",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "concurrently --names=\"frontend,backend\" --prefix-colors=\"bgBlue.bold,bgMagenta.bold\" --kill-others-on-fail \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --prefix frontend-web",
    "dev:server": "npm run dev --prefix backend-api",
    "generate": "concurrently --prefix-colors=\"bgBlue.bold,bgMagenta.bold\" --kill-others-on-fail \"npm run generate:client\" \"npm run generate:server\"",
    "generate:client": "npm run generate --prefix frontend-web",
    "generate:server": "npm run generate --prefix backend-api",
    "test": "concurrently --prefix-colors=\"bgBlue.bold,bgMagenta.bold\" --kill-others-on-fail \"npm run test:client\" \"npm run test:server\"",
    "test:client": "npm run test --prefix frontend-web",
    "test:server": "npm run test --prefix backend-api",
    "typecheck": "concurrently --prefix-colors=\"bgBlue.bold,bgMagenta.bold\" --kill-others-on-fail \"npm run typecheck:client\" \"npm run typecheck:server\"",
    "typecheck:client": "npm run typecheck --prefix frontend-web",
    "typecheck:server": "npm run typecheck --prefix backend-api",
    "lint": "concurrently --prefix-colors=\"bgBlue.bold,bgMagenta.bold\" --kill-others-on-fail \"npm run lint:client\" \"npm run lint:server\"",
    "lint:client": "npm run lint --prefix frontend-web",
    "lint:server": "npm run lint --prefix backend-api"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "aspida": "^1.14.0",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.5",
    "eslint-config-prettier": "^10.1.8",
    "concurrently": "^9.2.1",
    "pathpida": "^0.25.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "react": "^19.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "frourio-framework-prisma-generators": "^6.9.0"
  }
}
